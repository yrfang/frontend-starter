//output:index.html

doctype html
//20170524
html(lang='en')
  head
    meta(charset='utf-8')
    link(rel="stylesheet", href="css/screen.css")
    title Ajax and Vue.js
  body
    h1 使用JQuery AJAX與Vue.js配合
    hr
    
    #app1
      h2 1.使用Ajax載入純文字
      h3 {{notifydata}}
    hr
    #app2
      h2 2.使用Ajax載入商品清單(JSON Array)
      h5(v-if="items.lenght==0") 載入中...
      ul.items
        li(v-for="item in items")
          .name {{item.name}}
          .price {{item.price}}$
    hr
    #app3
     h2 3.實戰載入Hahow的API資料(JSON Array)
     h5(v-if="classes.lenght==0") 載入中...
     ul.classes
       li(v-for="class in classes")
         img.classes(v-bind:src="class.coverImage.url")
         .classinfo
           h4 {{class.title}} ({{class.price}}$)
           h5 老師: {{class.owner.name}}
           h5 募資狀態: {{class.numSoldTickets}}/{{class.successCriteria.numSoldTickets}}
           p {{class.metaDescription}}
    footer
      a(href="../01 - homepage/index.html") Home
  
  
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")  
    script(src="https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.28/vue.js")  
    script(src="ajax-vue.js")
