doctype html
//20170530
head
  meta(charset="utf-8")
  link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
  link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Oswald:300,400,700")
  link(rel="stylesheet", href="css/screen.css")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
  script(src="https://unpkg.com/vue/dist/vue.js")
  script(src="studio.js")
  title Studio Onepage
body

  //- navbar
  nav.navbar.navbar-default.navbar-fixed-top.at_top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#header_index') Yellow Studio
      #navbar.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href='#section_about') About 
              span.sr-only (current)
          li
            a(href='#section_works') Works
          li
            a(href='#section_contact') Contact
      // /.nav-collapse

  header#header_index
    .container
      img.icon(src="http://awiclass.monoame.com/img/webpic/w_icon.svg")
      img.marginbottom.moutain(src="http://awiclass.monoame.com/img/margin/m_index.svg")
    .explore.at_top EXPLORE
  
  section#section_about
    .container
      //第一行標題
      .row
        .col-sm-8.col-sm-offset-4
          img.tri1(src="http://awiclass.monoame.com/img/webpic/w_tri1.svg")
          h2.r1text WORKS IN YELLOW
      //第二列-標題跟兩個三角形
      .row
        .col-sm-4
          img.tri2(src="http://awiclass.monoame.com/img/webpic/w_tri2.svg")
        .col-sm-8
          img.tri3(src="http://awiclass.monoame.com/img/webpic/w_tri3.svg")
          h3.r2text YELLOW STUDIO-Website Design / Development
          h3.r2text Interactive Art Design
      //第三列-標題
      .row
        .col-sm-8
          h2.r3text 430 MORE SUCCESS CASES
      .clearfix
      //第三列-按鈕跟兩個三角形
      .row
        .col-sm-4.btn-area
          a.btn.btn-lg.btn-default(href="#section_works") MORE STORY
          img.tri4(src="http://awiclass.monoame.com/img/webpic/w_tri4.svg")
        .col-sm-4
          img.tri5(src="http://awiclass.monoame.com/img/webpic/w_tri5.svg")
    img.marginbottom(src="http://awiclass.monoame.com/img/margin/m_about.svg")
    
  section#section_service
    .container
      .row
        .col-sm-12
          h1 Service
        .col-sm-4
          img.icon_service(src="http://awiclass.monoame.com/img/webpic/w_service_icon1.svg")
          h3 CI/VI Design
        .col-sm-4
          img.icon_service(src="http://awiclass.monoame.com/img/webpic/w_service_icon2.svg")
          h3 MotionGraphic
        .col-sm-4
          img.icon_service(src="http://awiclass.monoame.com/img/webpic/w_service_icon3.svg")
          h3 Web Development
  section#section_works
    img.marginbottom.mountain(src="http://awiclass.monoame.com/img/margin/m_works.svg")
    .container#app
      .row(v-if="works.length>0")
        .col-sm-12
          h1 Works
        .col-sm-6.work.big
          img(v-bind:src="works[1].img", alt="")
          .texts
            h4.title {{works[1].name}}
            p.content {{works[1].content.substr(0,40)}}
        .col-sm-6
          .col-sm-6.work(v-for="w in works.slice(2,6)")
            img(v-bind:src="w.img", alt="")
            .texts
              h4.title {{w.name}}
  
  section#section_contact
    .container
      .row
        .col-sm-6
          .mails
            .mailcover
              img(src="https://awiclass.monoame.com/img/webpic/w_mail_cover.svg", alt="")
            .mailbody
              h5 Dear Yellow Studio
              label Name
              input(type="text")
              label Email
              input(type="text")
              label Content
              textarea
        .col-sm-6.information
          h2 CONTACT
          br
          p If you have any question about us,<br>Don`t hestitate to contact us !
          br
          br
          p YELLOWSTUDIO@gmail.com<br>ADDRESS: TAIWAN, TAIPEI , XORO Road<br>Phone: 02-12345678
  
  footer#footer
    img.icon(src="https://awiclass.monoame.com/img/webpic/w_icon_black.svg")
